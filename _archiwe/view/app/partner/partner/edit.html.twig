{% extends 'layout/app/app.html.twig' %}

{% block title %}Edytuj partnera{% endblock %}

{% block stylesheets %}{% endblock %}

{% block body %}
    <section class="content-header">
        <div class="container-fluid">
            <div class="row mb-2">
                <div class="col-sm-6">
                    <h1>Edytuj partnera</h1>
                </div>
                <div class="col-sm-6">
                    <ol class="breadcrumb float-sm-right">
                        <li class="breadcrumb-item"><a href="{{ url('app_app_index_index') }}">Home</a></li>
                        <li class="breadcrumb-item"><a href="{{ url('partner_index') }}">Lista partner√≥w</a></li>
                        <li class="breadcrumb-item active">Edytuj partnera</li>
                    </ol>
                </div>
            </div>
        </div>
    </section>

    <section class="content">
        <div class="row">
            <div class="col-3"></div>
            <div class="col-6">
                <div class="card card-primary card-outline">
                    <div class="card-header">
                        <h3 class="card-title"><i class="fas fa-plus"></i> Edytuj partnera</h3>
                    </div>
                    <div class="card-body pad table-responsive">
                        {{ form_start(form) }}
                        <div class="form-group">
                            {{ form_label(form.partner_name) }}
                            {{ form_widget(form.partner_name) }}
                            {{ form_errors(form.partner_name) }}
                        </div>
                        <div class="form-group">
                            {{ form_label(form.partner_default_margin) }}
                            {{ form_widget(form.partner_default_margin) }}
                            {{ form_errors(form.partner_default_margin) }}
                        </div>                         
                        {{ form_widget(form.submit) }}
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>
            <div class="col-3"></div>
        </div>
    </section>

{% endblock %}

{% block javascripts %}
<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/jquery.validate.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/additional-methods.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/plugins/jquery-validation/localization/messages_pl.min.js') }}"></script>
<script src="{{ asset('view/app/js/partner/partner/add_edit.js') }}"></script>
{% endblock %}