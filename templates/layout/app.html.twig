<!DOCTYPE html>
<html>
<head>
    <meta charset="utf-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <title>{% block title %}SWA{% endblock %}</title>
    <link rel="icon" type="image/x-icon" href="{{ asset('img/helpers/favicon.ico') }}">
    <meta name="viewport" content="width=device-width, initial-scale=1">

    <link rel="stylesheet" href="{{ asset('dep/AdminLTE/plugins/fontawesome-free/css/all.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dep/AdminLTE/plugins/jquery-ui/jquery-ui.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dep/jQuery-Timepicker/dist/jquery-ui-timepicker-addon.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dep/AdminLTE/plugins/toastr/toastr.min.css') }}">
    <link rel="stylesheet" href="{{ asset('dep/AdminLTE/dist/css/adminlte.min.css') }}">
    <link rel="stylesheet" href="{{ asset('css/main.css') }}">
    <link href="https://fonts.googleapis.com/css?family=Source+Sans+Pro:300,400,400i,700" rel="stylesheet">
    {% block stylesheets %}{% endblock %}
</head>
<body class="hold-transition sidebar-mini layout-fixed">

<div class="wrapper">
    <nav class="main-header navbar navbar-expand navbar-white navbar-light">
        <ul class="navbar-nav ml-auto">
            <li class="nav-item d-none d-sm-inline-block">
                <a href="#" class="nav-link">Wyloguj</a>
            </li>            
        </ul>
    </nav>
    <!-- /.navbar -->

    <!-- Main Sidebar Container -->
    <aside class="main-sidebar sidebar-dark-primary elevation-4">
        <!-- Brand Logo -->
        <a href="#" class="brand-link">
            <img src="{{ asset('dep/AdminLTE/dist/img/AdminLTELogo.png') }}" alt="AdminLTE Logo" class="brand-image img-circle elevation-3" style="opacity: .8">
            <span class="brand-text font-weight-light">AdminLTE 3</span>
        </a>

        <!-- Sidebar -->
        <div class="sidebar">
            <!-- Sidebar user (optional) -->
            <div class="user-panel text-center mt-2 pb-2 mb-2">
                <div class="info">
                    <a href="#" class="d-block">{% if app.user %}{{ app.user.username }}{% endif %}</a>
                </div>
            </div>

            <!-- Sidebar Menu -->
            <nav class="mt-2">
                <ul class="nav nav-pills nav-sidebar flex-column" data-widget="treeview" role="menu" data-accordion="false">
                    <li class="nav-item">
                        <a href="{{ path('app_index') }}" class="nav-link {{ menuItemIsActive(app.request.pathInfo, path('app_index')) }}"><i class="nav-icon fas fa-th"></i><p>Strona główna</p></a>
                    </li>
                    {# <li class="nav-item">
                        <a href="{{ path('user_index') }}" class="nav-link {{ menuItemIsActive(app.request.pathInfo, path('user_index')) }}"><i class="nav-icon fas fa-user"></i><p>Użytkownicy</p></a>
                    </li>                      #}
                    {# <li class="nav-item has-treeview {{ menuIsOpen(app.request.pathInfo, 'product') }}">
                        <a href="#" class="nav-link {{ aLinkIsActive(app.request.pathInfo, 'product') }}"><i class="nav-icon fas fa-basketball-ball"></i><p>Produkty <i class="right fas fa-angle-left"></i></p></a>
                        <ul class="nav nav-treeview">
                            <li class="nav-item">
                                <a href="{{ url('product_index') }}" class="nav-link {{ menuItemIsActive(app.request.pathInfo, path('product_index')) }}"><i class="fas fa-basketball-ball nav-icon"></i><p>Lista produktów</p></a>
                            </li>
                            <li class="nav-item">
                                <a href="{{ url('product_add') }}" class="nav-link {{ menuItemIsActive(app.request.pathInfo, path('product_add')) }}"><i class="fas fa-plus-circle nav-icon"></i><p>Dodaj produkt</p></a>
                            </li>
                        </ul>
                    </li>        #}                                                   
                </ul>
            </nav>
            <!-- /.sidebar-menu -->
        </div>
        <!-- /.sidebar -->
    </aside>

    <!-- Content Wrapper. Contains page content -->
    <div class="content-wrapper">
        {% block body %}{% endblock %}
    </div>

    {# Footer #}
    {{ include('layout/parts/appFooter.html.twig') }}

    {# Control Sidebar #}
    {{ include('layout/parts/appControlSidebar.html.twig') }}

</div>
<!-- ./wrapper -->

<script src="{{ asset('dep/AdminLTE/plugins/jquery/jquery.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/plugins/bootstrap/js/bootstrap.bundle.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/plugins/toastr/toastr.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/dist/js/adminlte.min.js') }}"></script>
<script src="{{ asset('dep/AdminLTE/plugins/jquery-ui/jquery-ui.min.js') }}"></script>
<script src="{{ asset('dep/jQuery-Timepicker/dist/jquery-ui-timepicker-addon.min.js') }}"></script>
<script src="{{ asset('js/main.js') }}"></script>
<script src="{{ asset('dep/Pace/pace.min.js') }}"></script>
{{ include('layout/parts/appFlashMessages.html.twig') }}

{% block javascripts %}{% endblock %}

</body>
</html>
